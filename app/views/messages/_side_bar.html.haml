.side-bar
  .side-bar__user-name  
    .side-bar__user-name__name
      = current_user.name
      .side-bar__user-name__name__icon
        .side-bar__user-name__name__icon1
          = link_to new_group_path, class: "name__icon1" do
            %i.fas.fa-pen-square
        .side-bar__user-name__name__icon2
          = link_to edit_user_path(current_user),class: "name__icon2" do
            %i.fas.fa-cog
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__message
        = link_to group_messages_path(group) do
          .side-bar__group-list__message__group
            = group.name
          .side-bar__group-list__message__title
            = group.show_last_message


