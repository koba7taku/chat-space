  .chat-main__message-form
    -# = form_for [@group, @message] do |f|
    .chat-main__message-form__type
      .chat-main__message-form__type__text
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'form__type__text', placeholder: 'type a message'
          .chat-main__message-form__type__image
            = f.label :image,class: "chat-main__message-form__type__send" do
              = icon('fas', 'image', class: 'icon')
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'chat-main__message-form__type__send__btn'
      